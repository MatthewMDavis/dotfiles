" Spec Runner - Generic spec runner for rspec and JS

Bundle 'gabebw/vim-spec-runner'

" let g:spec_runner_dispatcher = "call VtrSendCommand('{command}')"
let g:spec_runner_dispatcher = "VtrSendCommand! be {command}"

map <leader>t <Plug>RunFocusedSpec
map <leader>lt <Plug>RunMostRecentSpec

" vim:ft=vim
