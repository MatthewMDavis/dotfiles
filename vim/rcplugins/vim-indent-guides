" Vim-Indent-Guides - Make it easier to find where you are in a nest of indent levels


    let g:indent_guides_start_level = 2
    let g:indent_guides_guide_size = 1

let g:indent_guides_auto_colors = 0
autocmd VimEnter,Colorscheme * :hi IndentGuidesOdd  guibg=white   ctermbg=14
autocmd VimEnter,Colorscheme * :hi IndentGuidesEven guibg=lightgrey ctermbg=10


